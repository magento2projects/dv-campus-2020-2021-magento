      */
     const HTML_FILTER = "/i18n:\s?'(?<value>[^'\\\\]*(?:\\\\.[^'\\\\]*)*)'/i";

+    private const HTML_REGEX_LIST = [
+        // <span><!-- ko i18n: 'Next'--><!-- /ko --></span>
+        // <th class="col col-method" data-bind="i18n: 'Select Method'"></th>
+        "/i18n:\s?'(?<value>[^'\\\\]*(?:\\\\.[^'\\\\]*)*)'/i",
