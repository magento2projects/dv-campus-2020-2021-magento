<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="dv-campus-controller-redirect-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">{DV.Campus} Redirect Demo</argument>
                    <argument name="path" xsi:type="string">dvcampus_controller_demo/demo_newStyle/redirectController</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="dv-campus-controller-layout-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">{DV.Campus} Layout Demo</argument>
                    <argument name="path" xsi:type="string">dvcampus_controller_demo/demo_newStyle/layout/string_parameter/string/int/10</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="dv-campus-controller-page-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">{DV.Campus} Page Demo</argument>
                    <argument name="path" xsi:type="string">dvcampus_controller_demo/demo_newStyle/page/string_parameter/string/int/10</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
