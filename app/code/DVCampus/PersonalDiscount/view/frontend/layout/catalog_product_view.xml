<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Framework\View\Element\Text\ListText"
                   name="dv.campus.personal.discount.tab"
                   group="detailed_info"
            >
                <arguments>
                    <argument name="sort_order" xsi:type="string">40</argument>
                    <argument translate="true" name="title" xsi:type="string">Personal Discount</argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Template"
                       name="dv.campus.personal.discount.button"
                       template="DVCampus_PersonalDiscount::catalog/product/view/discount/button.phtml"
                       group="detailed_info"
                />
                <block class="Magento\Catalog\Block\Product\View"
                       name="dv.campus.personal.discount.form"
                       template="DVCampus_PersonalDiscount::catalog/product/view/discount/form.phtml"
                       group="detailed_info"
                />
            </block>
        </referenceBlock>
    </body>
</page>
