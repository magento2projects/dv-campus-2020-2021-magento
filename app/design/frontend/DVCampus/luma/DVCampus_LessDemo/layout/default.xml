<?xml version="1.0"?>
<page layout="1column-custom" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Cms\Block\Block" name="before-footer-content-cms-block" before="footer-container">
                <arguments>
                    <argument name="block_id" xsi:type="string">before_footer_content</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="footer-container" destination="page.wrapper" before="-"/>
    </body>
</page>
